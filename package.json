{
  "name": "kube-env",
  "version": "1.0.0",
  "description": "Kubernetes environment configuration using terraform and helm",
  "scripts": {
    "scripts:init": "chmod +x scripts/*",
    "grafana": "./scripts/grafana-open.sh",
    "rancher": "./scripts/rancher-open.sh",
    "kube": "terraform -chdir=deployments/environments/aks-mpn-westeu-prod",
    "kube:init": "terraform -chdir=deployments/environments/aks-mpn-westeu-prod init",
    "kube:apply": "./scripts/verify-kube-context.sh aks-mpn-westeu-prod-v2 && terraform -chdir=deployments/environments/aks-mpn-westeu-prod apply",
    "kube:connect": "az aks get-credentials --resource-group rg-aks-mpn-westeu-prod-v2 --name aks-mpn-westeu-prod-v2",
    "kube-vse": "terraform -chdir=deployments/environments/aks-vse-westeu-prod",
    "kube-vse:init": "terraform -chdir=deployments/environments/aks-vse-westeu-prod init",
    "kube-vse:apply": "./scripts/verify-kube-context.sh aks-vse-westeu-prod && terraform -chdir=deployments/environments/aks-vse-westeu-prod apply",
    "kube-vse:connect": "az aks get-credentials --resource-group rg-aks-vse-westeu-prod --name aks-vse-westeu-prod",
    "kube-dev": "terraform -chdir=deployments/environments/aks-vse-westeu-dev",
    "kube-dev:init": "terraform -chdir=deployments/environments/aks-vse-westeu-dev init",
    "kube-dev:apply": "./scripts/verify-kube-context.sh aks-vse-westeu-dev && terraform -chdir=deployments/environments/aks-vse-westeu-dev apply",
    "kube-dev:destroy": "./scripts/verify-kube-context.sh aks-vse-westeu-dev && terraform -chdir=deployments/environments/aks-vse-westeu-dev destroy",
    "kube-dev:connect": "az aks get-credentials --resource-group rg-aks-vse-westeu-dev --name aks-vse-westeu-dev",
    "app-plausible": "terraform -chdir=deployments/apps/plausible",
    "app-plausible:init": "terraform -chdir=deployments/apps/plausible init",
    "app-plausible:apply": "terraform -chdir=deployments/apps/plausible apply",
    "app-plausiblev3": "terraform -chdir=deployments/apps/plausiblev3",
    "app-plausiblev3:init": "terraform -chdir=deployments/apps/plausiblev3 init",
    "app-plausiblev3:apply": "terraform -chdir=deployments/apps/plausiblev3 apply"
  },
  "dependencies": {},
  "author": "Jeroen Bach"
}